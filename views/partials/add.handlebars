<div id="addSection" class="addSection bg-success py-5 px-5 d-flex justify-content-center flex-column mh-60">
    <div class="d-flex mb-5 container">
        <div class="d-flex flex-column col-6 h-20" style="height: 50%;">
            <input 
                type="text" 
                placeholder="Enter name of new Recipe" 
                id="nameText" 
                class="col mb-3"
            />

            <textarea placeholder="Description of dish..." id="descText" class="col h-auto"></textarea>
        </div>

        <div class="col-6">
            <div class="d-flex mb-2 container">
                <input 
                    type="text" 
                    placeholder="Enter Ingredients" 
                    id="addIng" 
                    class="col"
                />
                <input type="button" id="addBtn" value="Add" class="px-5"/>
            </div>
            
            {{> ings }}
        </div>
    </div>
    
    {{!-- maybe change macros to get nutrient and amount --}}
    <div class="col d-flex mb-3">
        <div class="col-6">
            <div class="d-flex container mb-2">
                <select id="macroSelect">
                    <option value="Calories">Calories</option>
                    <option value="Total Fat">Total Fat</option>
                    <option value="Saturated Fat">Saturated Fat</option>
                    <option value="Cholesterol">Cholesterol</option>
                    <option value="Sodium">Sodium</option>
                    <option value="Potassium">Potassium</option>
                    <option value="Total Carbohydrate">Total Carbohydrate</option>
                    <option value="Dietary Fiber">Fiber</option>
                    <option value="Sugar">Sugar</option>
                    <option value="Protein">Protein</option>
                    <option value="Vitamin C">Vitamin C</option>
                    <option value="Iron">Iron</option>
                    <option value="Vitamin B-6">Vitamin B-6</option>
                    <option value="Magnesium">Magnesium</option>
                    <option value="Calcium">Calcium</option>
                    <option value="Vitamin D">Vitamin D</option>
                    <option value="Cobalamin">Cobalamin</option>
                </select>
                <input id="macrosText" type="text" placeholder="Macros" class="col"/>
                <input id="macrosBtn" type="button" value="Add" class="px-5"/>
            </div>

            {{> macros}}
        </div>
        
        <div class="col-6">
            <div class="d-flex container mb-2">
                <input id="stepText" type="text" placeholder="Cooking steps" class="col"/>
                <input id="stepBtn" type="button" value="Add" class="px-5"/>
            </div>

            {{> steps }}
        </div>
        
    </div>

    <input type="button" value="submit" id="submitBtn" class="col-6 m-auto p-4"/>
</div>